@model TazaShop.Models.Customer

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row" id="div_login">
    <h4>Customer</h4>
    <hr />
    <div class="row">
        <div>
            <form asp-action="Login">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group" id="form_group1">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" id="data_input"/>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <hr />
                <div class="form-group" id="form_group2">
                    <label asp-for="Password" class="control-label"></label>
                    <input asp-for="Password" class="form-control" id="data_input" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <hr />
                <div class="form-group">
                    <input type="submit" value="Login" class="btn" />
                </div>
            </form>
        </div>
    </div>
    <div>
        <a asp-action="Registration" class="btn" asp-controller="Units">Registration</a>
    </div>


</div>
